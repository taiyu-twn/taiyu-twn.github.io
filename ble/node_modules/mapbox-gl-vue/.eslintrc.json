{
    "globals": {
        // Put things like jQuery, etc
        "jQuery": true,
        "$": true,
        "Vue": true,
        "document": false,
        "navigator": false,
        "window": false,
        "mapboxgl": true
    },
    "plugins": [
        "vue"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0
    }
}